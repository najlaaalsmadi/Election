@model WebApplication16.Models.Admin

@{
    ViewBag.Title = "تسجيل دخول المسؤول";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css" rel="stylesheet">
</head>

@using (Html.BeginForm("LoginAdmin", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center bg-green-dark text-white">
                        <h4>تسجيل دخول المسؤول</h4>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-red" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.email, new { @class = "form-label" })
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-red" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.password, new { @class = "form-label" })
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-red" })
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="تسجيل الدخول" class="btn btn-green-dark" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center mt-3">
    @Html.ActionLink("العودة إلى القائمة", "Index", "Home", new { area = "" }, new { @class = "btn btn-link" })
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
<script>
    window.onload = function() {
        var errorMessage = '@TempData["LoginError"]';
        if (errorMessage) {
            Swal.fire({
                icon: 'error',
                title: 'خطأ',
                text: errorMessage
            });
        }
    }
</script>

<style>
    .bg-green-dark {
        background-color: #006400 !important; /* Dark green */
    }

    .text-red {
        color: #dc3545; /* Red for error messages */
    }

    .btn-green-dark {
        background-color: #006400; /* Dark green */
        border-color: #004d00;
        color: white;
    }

        .btn-green-dark:hover {
            background-color: #004d00;
            border-color: #003300;
        }

    .form-label {
        color: #343a40; /* Dark grey for labels */
    }

    .card {
        border-radius: 0.25rem;
        border: 1px solid #343a40; /* Dark grey border */
    }

    .card-header {
        border-bottom: 1px solid #343a40; /* Dark grey border */
    }

    .btn-link {
        color: #343a40; /* Dark grey for links */
    }

        .btn-link:hover {
            color: #1d2124; /* Darker grey on hover */
        }
</style>
