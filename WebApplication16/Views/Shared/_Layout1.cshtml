<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .nav-link {
            color: white;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            height: 100vh; /* Full viewport height */
            overflow: auto; /* Scroll if content exceeds viewport height */
            background-color: #007a33; /* Green color */
        }

        .sidebar-header {
            background-color: #d71a34; /* Red color */
        }

        .content {
            margin-left: 250px; /* Same as the sidebar width */
            padding: 20px;
        }

        .nav-item {
            border-bottom: 1px solid #ffffff; /* White border for separation */
        }

        .nav-link:hover {
            background-color: #d71a34; /* Red background on hover */
            color: #ffffff; /* White text on hover */
        }

        .user-wrapper img {
            border: 3px solid #ffffff; /* White border around the profile picture */
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-around">
        <nav class="sidebar d-flex flex-column p-3">
            <div class="sidebar-header p-3 text-center mb-3">
                <div class="user-wrapper d-flex align-items-center mt-3 mt-md-0">
                    <img src="~/image/نجلاء.jpg" alt="User" class="rounded-circle mr-2" style="width: 100px; height: 100px;" />
                    <div>
                        <h4>najlaa alsmadi</h4>
                        <small>Super admin</small>
                    </div>
                </div>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    @Html.ActionLink("Dashboard", "Index", "admin", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Charts", "Charts", "admin", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Tables</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Forms</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Calendar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Maps</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Pages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">UI Elements</a>
                </li>
            </ul>
        </nav>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
